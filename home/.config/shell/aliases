alias ls='ls --group-directories-first --color=auto'
alias grep='grep --color=auto'
alias weechat='weechat-curses'
alias tophist="cat $HISTFILE | awk '{print \$2}' | awk 'BEGIN {RS=\";\"}{print \$1}' | sort | uniq -c | sort -nr | head"
#alias tophist="fc -nl 1 | cut -d' ' -f1 | sort | uniq -c | sort -nr | head"
alias tiddir='find -depth -type d -empty -exec rmdir {} \;'
alias choosebg='feh -xrF /mnt/common/images/wallpaper'
# example command: "inkscape blah \&"
alias xfreerdp='xfreerdp --ignore-certificate -g 1280x960 -a 16 --plugin cliprdr'
alias rdesktop='xfreerdp'

