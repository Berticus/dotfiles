# hardlink ~/.XResources and ~/.Xdefaults
urxvt.depth: 32
urxvt.background: [70]black
urxvt.foreground: #ffffff
URxvt*scrollBar: off
urxvt.secondaryscroll: true
urxvt*font: -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso8859-1
!urxvt*boldfont: 

urxvt.perl-lib: /usr/lib/urxvt/perl
urxvt.perl-ext-common: default,matcher
urxvt.url-launcher: firefox
urxvt.matcher.button: 1
!urxvt.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
!urxvt.selection.pattern-0: ([[:word:]]+)
!urxvt.keysym.M-u: perl:url-select:select_next

*VT100*colorULMode: on
*VT100*colorUL: yellow
*VT100*italicULMode: on
*VT100*underLine: off
*VT100*colorBDMode: on
*VT100*colorBD: red

! terminal colors!

! Normal:
! color0: black
! color1: red
! color2: green
! color3: yellow
! color4: blue
! color5: purple
! color6: cyan
! color7: white

urxvt.*color0: #292929
urxvt.*color1: #de6951
urxvt.*color2: #bcda55
urxvt.*color3: #e2a564
urxvt.*color4: #2187f6
urxvt.*color5: #875c8d
urxvt.*color6: #4390b1
urxvt.*color7: #d2d2d2

! Light:
! color8: bright black
! color9: bright red
! color10: bright green
! color11: bright yellow
! color12: bright blue
! color13: bright purple
! color14: bright cyan
! color15: bright white

urxvt.*color8: #3d3d3d
urxvt.*color9: #c56a47
urxvt.*color10: #9dbf60
urxvt.*color11: #ec8a25
urxvt.*color12: #5495dc
urxvt.*color13: #e41f66
urxvt.*color14: #276cc2
urxvt.*color15: #ffffff

urxvt.*keysym.M-Up: \033[1;3A
urxvt.*keysym.M-Down: \033[1;3B
urxvt.*keysym.M-Left: \033[1;3D
urxvt.*keysym.M-Right: \033[1;3C
urxvt.*keysym.Control-Up: \033[1;5A
urxvt.*keysym.Control-Down: \033[1;5B
urxvt.*keysym.Control-Left: \033[1;5D
urxvt.*keysym.Control-Right: \033[1;5C
